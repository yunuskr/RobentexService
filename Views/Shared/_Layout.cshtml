<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Robentex</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/Images/RxLogo.png" asp-append-version="true" />
    <link rel="shortcut icon" href="~/Images/RxLogo.png" type="image/png" />
    <meta name="theme-color" content="#0f0f0f" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Sayfa-özel stiller -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <main role="main">
        @RenderBody()
    </main>

    <!-- jQuery (validation + bizim form scriptleri için gerekli) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-3gJwYp4gkGk7tPXikynSIQY5S4rjvZ91Wm1oog1wQw="
            crossorigin="anonymous"></script>

    <!-- Bootstrap JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sayfa-özel scriptler -->
    @RenderSection("Scripts", required: false)
</body>
</html>
