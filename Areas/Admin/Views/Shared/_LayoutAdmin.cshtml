@using System.Security.Claims
@{
    bool isAuth = User?.Identity?.IsAuthenticated ?? false;

    // SADECE USERNAME GÖSTER
    string username = User?.Identity?.Name ?? "Kullanıcı";

    // Rozet için ilk harfler (username’den)
    var initials = string.Join("", (username ?? "U")
        .Split(' ', StringSplitOptions.RemoveEmptyEntries)
        .Take(2)
        .Select(s => s[0]))
        .ToUpperInvariant();

    string logoutUrl = Url.Action("Logout", "Account", new { area = "Admin" })!;
    string loginUrl  = Url.Action("Login",  "Account", new { area = "Admin" })!;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Robentex</title>

    <link rel="icon" type="image/png" href="~/Images/RxLogo.png" asp-append-version="true" />
    <meta name="theme-color" content="#0f0f0f" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body class="bg-dark text-light">
@{
    // <<< EKLENEN SATIR
    bool hideTopbar = (ViewData["HideTopbar"] as bool?) ?? false;
}

    @* SADECE gizlenmemişse navbarı render et *@
    @if (!hideTopbar)
    {
        <nav class="navbar navbar-expand-lg navbar-dark" style="background:#0f0f0f;border-bottom:1px solid rgba(255,255,255,.08)">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="@Url.Action("Index","Home", new { area="Admin" })">Robentex Admin</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topbar"
                        aria-controls="topbar" aria-expanded="false" aria-label="Menü">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="topbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>

                    <div class="d-flex align-items-center gap-2">
                        @if (isAuth)
                        {
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-light d-flex align-items-center gap-2 dropdown-toggle"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    <span style="width:28px;height:28px;border-radius:50%;background:#ffc107;color:#111;
                                                 display:inline-flex;align-items:center;justify-content:center;font-weight:700;">
                                        @initials
                                    </span>
                                    <span class="fw-semibold">@username</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
                                    <li class="dropdown-header">Hesap</li>
                                    <li>
                                        <form method="post" action="@logoutUrl" class="px-3 py-1">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-warning btn-sm w-100">Çıkış Yap</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-outline-warning" href="@loginUrl">Giriş Yap</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    }

    <main role="main">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
