  <!-- basit arama: kart baÅŸlÄ±ÄŸÄ± / id iÃ§inde filtre -->
  <script>
  const q = document.getElementById('searchBox');

  function applySearch(){
    const term = (q?.value || '').trim().toLowerCase();

    document.querySelectorAll('.kb-card').forEach(card => {
      // Kart Ã¼zerinde sakladÄ±ÄŸÄ±mÄ±z deÄŸerler
      const company = (card.dataset.company || '').toLowerCase();
      const rx      = (card.dataset.rx || '').toLowerCase();

      // Firma adÄ± veya RX kodu eÅŸleÅŸirse gÃ¶ster
      const match = term === '' || company.includes(term) || rx.includes(term);
      card.style.display = match ? '' : 'none';
    });
  }

  q?.addEventListener('input', applySearch);
</script>
